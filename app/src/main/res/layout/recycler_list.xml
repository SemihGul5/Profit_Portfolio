<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:backgroundTint="@color/white"
    >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >


        <TextView
            android:id="@+id/recyclerStockNameText"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/oval_button"
            android:text="deneme"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewRecycler"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/recyclerStockNameText"
            android:text="Tutar"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/recyclerAmountNameText"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="150 TL"
            android:layout_toRightOf="@+id/recyclerStockNameText"
            android:layout_below="@+id/textViewRecycler"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/textViewRecycler2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Kar / Zarar"
            android:layout_toRightOf="@+id/textViewRecycler"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/recyclerKarZararNameText"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="150 TL"
            android:layout_toRightOf="@+id/recyclerAmountNameText"
            android:layout_below="@+id/textViewRecycler2"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/textViewRecycler4"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Getiri"
            android:layout_toRightOf="@+id/textViewRecycler2"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/yuzde"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="% 0.87"
            android:layout_toRightOf="@+id/recyclerKarZararNameText"
            android:layout_below="@+id/textViewRecycler2"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/yuzde"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >

        <TextView
            android:id="@+id/textViewRecycler3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alış Tarihi: "
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/recyclerDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05/01/2020"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewRecycler5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satış Tarihi:"
            android:textColor="@color/black"
            android:gravity="left"
            android:layout_weight="1"

            android:textStyle="bold"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/recyclerDateSellText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05/01/2020"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="14sp" />
        </LinearLayout>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerFlowMenu"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_more_vert_24"
            android:layout_marginTop="3dp"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textViewRecycler4"
            />






    </RelativeLayout>


</androidx.cardview.widget.CardView>