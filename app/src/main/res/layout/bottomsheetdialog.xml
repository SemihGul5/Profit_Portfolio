<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomsheet_bg"

    >
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIRALAMA"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/azText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  A-Z Sırala"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/zaText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Z-A Sırala"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"

        />

    <TextView
        android:id="@+id/biggerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  En Yüksek Kar Sırala"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"

        />

    <TextView
        android:id="@+id/smallerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  En Düşük Kar Sırala"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"

        />

</LinearLayout>